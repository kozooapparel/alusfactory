---
import { cloudinaryUrl, HERO_BG, HERO_PRODUCT } from '../lib/cloudinary';

const whatsappUrl = "https://wa.me/628112230558";
const heroBg = cloudinaryUrl(HERO_BG, { width: 1920, height: 1080, crop: 'fill' });
// Remove fixed 500x500 to allow natural aspect ratio (fit)
const heroProduct = cloudinaryUrl(HERO_PRODUCT, { width: 600, crop: 'limit' });
---

<section id="home" class="relative min-h-[700px] flex items-center bg-gray-900 overflow-hidden pt-20">
    <!-- Background -->
    <div class="absolute inset-0 z-0">
        <img src={heroBg} alt="Konveksi Tekstil" class="w-full h-full object-cover opacity-40">
        <div class="hero-overlay absolute inset-0"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            
            <!-- Left Column -->
            <div class="text-center lg:text-left animate-fade-in-up order-2 lg:order-1">
                <h1 class="font-heading font-extrabold text-4xl sm:text-5xl md:text-6xl text-white mb-6 leading-tight drop-shadow-lg">
                    Solusi <span class="text-primary">Konveksi</span> & <br>Custom Apparel
                </h1>
                <p class="text-lg sm:text-xl text-gray-200 mb-8 max-w-2xl mx-auto lg:mx-0 font-light leading-relaxed">
                    Wujudkan identitas tim dan brand Anda dengan kualitas produksi terbaik. Melayani pembuatan jersey, jaket, dan seragam dengan desain 100% custom.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <a href={whatsappUrl} target="_blank" class="bg-primary text-white px-8 py-4 rounded-full font-heading font-bold text-lg hover:bg-[#017a91] transition shadow-xl shadow-primary/20 flex items-center justify-center gap-2">
                        <i data-lucide="message-circle" class="w-5 h-5"></i>
                        Konsultasi Gratis
                    </a>
                    <a href="/produk" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-heading font-bold text-lg hover:bg-white hover:text-secondary transition flex items-center justify-center">
                        Lihat Katalog
                    </a>
                </div>
            </div>

            <!-- Right Column: Featured Product -->
            <div class="flex justify-center items-center mt-[4.25rem] mb-2 lg:mb-0 lg:mt-0 order-1 lg:order-2">
                <div class="relative">
                    <!-- Background Glow -->
                    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[300px] sm:w-[400px] h-[300px] sm:h-[400px] bg-gradient-to-tr from-primary/30 to-secondary/20 rounded-full blur-3xl animate-pulse"></div>
                    
                    <!-- Product Image -->
                    <div class="relative z-10 idle-float">
                        <img 
                            src={heroProduct}
                            alt="Jersey Custom" 
                            class="w-[300px] sm:w-[450px] drop-shadow-2xl"
                        >
                    </div>

                    <!-- Floating Badges -->
                    <div class="absolute top-0 sm:top-10 -right-4 sm:right-0 bg-white/95 backdrop-blur-sm p-2 sm:p-3 rounded-2xl shadow-xl flex items-center gap-2 sm:gap-3 z-30 animate-bounce-slow">
                        <div class="w-6 h-6 sm:w-8 sm:h-8 rounded-full bg-primary flex items-center justify-center text-white">
                            <i data-lucide="check" class="w-3 h-3 sm:w-4 sm:h-4"></i>
                        </div>
                        <div>
                            <span class="block text-[10px] sm:text-xs font-bold text-secondary uppercase tracking-wider">Full Custom</span>
                            <span class="block text-[8px] sm:text-[10px] text-gray-500">100% Sesuai Desain</span>
                        </div>
                    </div>

                    <div class="absolute bottom-10 sm:bottom-20 -left-4 sm:left-0 bg-white/95 backdrop-blur-sm p-2 sm:p-3 rounded-2xl shadow-xl flex items-center gap-2 sm:gap-3 z-30 animate-bounce-slow" style="animation-delay: 1.5s;">
                        <div class="w-6 h-6 sm:w-8 sm:h-8 rounded bg-primary flex items-center justify-center text-white">
                            <i data-lucide="truck" class="w-3 h-3 sm:w-4 sm:h-4"></i>
                        </div>
                        <div>
                            <span class="block text-[10px] sm:text-xs font-bold text-secondary uppercase tracking-wider">Pengiriman</span>
                            <span class="block text-[8px] sm:text-[10px] text-gray-500">Seluruh Indonesia</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes bounce-slow {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    .animate-bounce-slow {
        animation: bounce-slow 3s ease-in-out infinite;
    }
</style>
