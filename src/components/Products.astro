---
import { cloudinaryUrl, JERSEY_IMAGES, KAOS_IMAGES, JAKET_IMAGES } from '../lib/cloudinary';

const products = [
    {
        title: "Jersey Custom",
        description: "Cocok untuk tim esports, futsal, dan sepak bola.",
        image: cloudinaryUrl(JERSEY_IMAGES[0], { width: 600, height: 600 })
    },
    {
        title: "Polo Shirt",
        description: "Elegan untuk seragam kantor dan acara semi-formal.",
        image: cloudinaryUrl(KAOS_IMAGES[0], { width: 600, height: 600 })
    },
    {
        title: "Jaket & Hoodie",
        description: "Bahan nyaman untuk komunitas dan angkatan.",
        image: cloudinaryUrl(JAKET_IMAGES[0], { width: 600, height: 600 })
    },
    {
        title: "T-Shirt Merch",
        description: "Sablon berkualitas tinggi untuk merchandise brand.",
        image: cloudinaryUrl(KAOS_IMAGES[1], { width: 600, height: 600 })
    }
];
---

<section id="products" class="py-20 bg-accent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-secondary mb-4">Layanan & Produk Kami</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Kami menyediakan berbagai jenis apparel yang dapat dikustomisasi sepenuhnya sesuai kebutuhan Anda.</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {products.map((product) => (
                <a href="/produk" class="bg-white rounded-[2rem] overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 group cursor-pointer block">
                    <!-- 1:1 Aspect Ratio Container -->
                    <div class="aspect-square bg-gray-200 overflow-hidden relative">
                        <img src={product.image} alt={product.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy">
                        <div class="print-bar absolute left-0 w-full h-2 bg-gradient-to-r from-cyan-400 via-white to-cyan-400 opacity-0 shadow-[0_0_15px_rgba(1,151,178,0.8)] z-10"></div>
                    </div>
                    <div class="p-6">
                        <h3 class="font-heading font-bold text-xl mb-2 text-secondary">{product.title}</h3>
                        <p class="text-sm text-gray-500 mb-4">{product.description}</p>
                        <span class="text-primary font-semibold text-sm flex items-center group-hover:underline">
                            Lihat Detail 
                            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </span>
                    </div>
                </a>
            ))}
        </div>

        <!-- Link to Products Page -->
        <div class="text-center mt-12">
            <a href="/produk" class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-heading font-bold text-lg hover:bg-[#017a91] transition shadow-lg shadow-primary/20">
                Lihat Semua Produk
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>
