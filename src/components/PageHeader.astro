---
interface Props {
    title: string;
    subtitle?: string;
    backgroundImage?: string;
}

const { 
    title, 
    subtitle,
    backgroundImage = "https://images.unsplash.com/photo-1558171813-4c088753af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80"
} = Astro.props;
---

<section class="relative h-[300px] md:h-[400px] flex items-center justify-center bg-gray-900 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <img 
            src={backgroundImage} 
            alt={title} 
            class="w-full h-full object-cover opacity-40"
        >
        <div class="absolute inset-0 bg-gradient-to-b from-secondary/80 to-secondary/60"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 text-center px-4">
        <h1 class="font-heading font-extrabold text-4xl md:text-5xl lg:text-6xl text-white mb-4 drop-shadow-lg">
            {title}
        </h1>
        {subtitle && (
            <p class="text-lg md:text-xl text-gray-200 max-w-2xl mx-auto font-light">
                {subtitle}
            </p>
        )}
    </div>
</section>
