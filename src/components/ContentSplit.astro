---
interface Props {
    imagePosition?: 'left' | 'right';
    imageSrc: string;
    imageAlt?: string;
}

const { 
    imagePosition = 'right',
    imageSrc,
    imageAlt = "Alus Factory"
} = Astro.props;
---

<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${imagePosition === 'left' ? 'lg:flex-row-reverse' : ''}`}>
            <!-- Text Content -->
            <div class={`fade-in-section ${imagePosition === 'left' ? 'lg:order-2' : 'lg:order-1'}`}>
                <slot />
            </div>
            
            <!-- Image -->
            <div class={`${imagePosition === 'left' ? 'lg:order-1' : 'lg:order-2'}`}>
                <div class="relative">
                    <img 
                        src={imageSrc} 
                        alt={imageAlt}
                        class="rounded-[2.5rem] shadow-2xl w-full h-[400px] object-cover"
                    >
                    <!-- Decorative element -->
                    <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary/20 rounded-2xl -z-10"></div>
                    <div class="absolute -top-4 -left-4 w-16 h-16 bg-secondary/10 rounded-2xl -z-10"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .fade-in-section {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.8s ease-out forwards;
    }
    
    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
