---
import { cloudinaryUrl, GALLERY_IMAGES } from '../lib/cloudinary';

const galleryImages = GALLERY_IMAGES.slice(0, 5).map(img => ({
    src: cloudinaryUrl(img.path, { width: 600, quality: 'auto' }),
    alt: img.caption
}));
---

<section id="gallery" class="py-20 bg-accent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-secondary mb-4">Galeri Produksi</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Lihat hasil karya kami untuk berbagai klien dari tim olahraga hingga perusahaan.</p>
        </div>
        
        <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6" id="gallery-grid">
            {galleryImages.map((image, index) => (
                <a href="/galeri" class="gallery-item break-inside-avoid rounded-[2rem] overflow-hidden shadow-md relative block group" style={`animation-delay: ${index * 0.2}s`}>
                    <img src={image.src} alt={image.alt} class="w-full group-hover:scale-105 transition duration-500" loading="lazy">
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors flex items-center justify-center">
                        <span class="text-white opacity-0 group-hover:opacity-100 transition-opacity font-semibold flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                            </svg>
                            Lihat Galeri
                        </span>
                    </div>
                </a>
            ))}
        </div>

        <!-- Link to Gallery Page -->
        <div class="text-center mt-12">
            <a href="/galeri" class="inline-flex items-center gap-2 bg-secondary text-white px-8 py-4 rounded-full font-heading font-bold text-lg hover:bg-gray-700 transition shadow-lg">
                Lihat Semua Galeri
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<script>
    const observerOptions = { root: null, rootMargin: '0px', threshold: 0.3 };
    
    const galleryObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting && entry.target.classList.contains('gallery-item')) {
                entry.target.classList.add('gallery-active');
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.querySelectorAll('.gallery-item').forEach(item => galleryObserver.observe(item));
</script>
